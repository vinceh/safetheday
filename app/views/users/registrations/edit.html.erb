<% content_for :meta do %>
  <title>Account Settings</title>
<% end %>

<div class="container">
  <%= render "users/account_side", :current => "settings" %>
  <div class="right-panel">
    <h3>You</h3>
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :class => "edit-user-form" }) do |f| %>
      <%= devise_error_messages! %>

      <div>
        <label>Email</label>
        <%= f.email_field :email, :autofocus => true, :placeholder => "Email" %>
      </div>

      <div>
        <label>Enter your current password to change it</label>
        <%= f.password_field :current_password, :placeholder => "• • • • • • • • • •" %>
        <%= f.password_field :password, :autocomplete => "off", :placeholder => "New Password" %>
        <%= f.password_field :password_confirmation, :placeholder => "Re-enter Password" %>
      </div>

      <div><%= f.submit "Save" %></div>
    <% end %>
  </div>
</div>
