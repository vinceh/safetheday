<div class="registration">
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>

    <div class="devise-error"><%= devise_error_messages! %></div>

    <h2>Sign up</h2>

    <%= link_to user_omniauth_authorize_path(:facebook), :class => "omni-link" do %>
      <%= image_tag "fb-btn.jpg" %>
    <% end %>

    <div class="or">
      <hr>
      <span>or</span>
    </div>

    <%= f.email_field :email, :autofocus => true, :placeholder => "Your Email" %>

    <%= f.password_field :password, :placeholder => "Password" %>
    <%= f.password_field :password_confirmation, :placeholder => "Re-enter Password" %>

    <div><%= f.submit "Sign up" %></div>
  <% end %>

  <%= render "users/shared/links" %>
</div>