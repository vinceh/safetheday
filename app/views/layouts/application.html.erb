<!DOCTYPE html>
<html>
<head>
  <title>Safe</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>

  <%= yield :head %>

  <meta name="google-site-verification" content="eONyiVNoJgQAnR3_vkagzorCKMPyaaBkjwqq9xE91Vk" />
</head>
<body>

<div class="header">
  <div class="backwash"></div>
  <div class="container">
    <%= link_to root_url do %>
      <%= image_tag "safesquarelogo.png" %>
    <% end %>
    <%= image_tag "safe-words.png", :class => "top-logo" %>
    <div class="right-links">
      <%= link_to "ACCOUNT", user_root_path, :class => "light" %>
      <% if current_user %>
        <%= link_to "LOGOUT", destroy_user_session_path, :method => "DELETE", :class => "light" %>
      <% end%>

      <% if !current_user || current_user.inactive %>
        <%= link_to "START", select_pack_path, :class => "light special-select" %>
      <% end %>
    </div>
  </div>
</div>

<% if flash[:notice] %>
  <div class="success-flash">
    <%= flash[:notice] %>
  </div>
<% end %>

<div class="body-wrap">
  <%= yield %>
</div>

<div class="footer">
  <div class="content">
    <%= link_to "LEGAL", legal_path, :class => "light" %>
    <span></span>
    <%= link_to "FAQ", faq_path, :class => "light" %>
  </div>
</div>

</body>
</html>
